{#
/**
 * @file
 * Theme override to display a region.
 *
 * Available variables:
 * - content: The content for this region, typically blocks.
 * - attributes: HTML attributes for the region <div>.
 * - region: The name of the region variable as defined in the theme's
 *   .info.yml file.
 *
  * Custom variables:
 * - info_comune: contiene informazioni su comune e regione oltre che le configurazioni per i social e gli svg legati ai content types.
 *
 * @see template_preprocess_region()
 */
#}

<div class="skiplink">
  <a class="visually-hidden-focusable" accesskey="1" href="#main-container">Vai ai contenuti</a>
  <a class="visually-hidden-focusable" accesskey="2" href="#footer">Vai al footer</a>
</div>
<header class="it-header-wrapper it-header-sticky" data-bs-toggle="sticky" data-bs-position-type="fixed" data-bs-sticky-class-name="is-sticky" data-bs-target="#header-nav-wrapper">
  <div class="it-header-slim-wrapper">
    <div class="container">
      <div class="row">
        <div class="col-12">
            {% set nome_regione = site_settings.infocomune.info_comune.field_nome_regione %}
            {% set url_regione = site_settings.infocomune.info_comune.field_url_regione.uri %}
          <div class="it-header-slim-wrapper-content">
            <a class="d-lg-block navbar-brand"
               href="{{ url_regione }}" target="_blank"
               aria-label="Vai al portale {{ nome_regione }} - link esterno - apertura nuova scheda"
               title="Vai al portale {{ nome_regione }}"
            >{{ nome_regione }}</a>
            <div class="it-header-slim-right-zone" role="navigation">
              <div class="nav-item dropdown">
                <button type="button" class="nav-link dropdown-toggle" data-bs-toggle="dropdown"
                        aria-expanded="false" aria-controls="languages" aria-haspopup="true"
                >
                  <span class="visually-hidden">Lingua attiva:</span>
                  <span>ITA</span>
                  <svg class="icon">
                    <use href="#it-expand" />
                  </svg>
                </button>
                <div class="dropdown-menu">
                  <div class="row">
                    <div class="col-12">
                      <div class="link-list-wrapper">
                        <ul class="link-list">
                          <li>
                            <a class="dropdown-item list-item" href="#">
                              <span>ITA<span class="visually-hidden">selezionata</span></span>
                            </a>
                          </li>
                          <li>
                            <a class="dropdown-item list-item" href="#">
                              <span>ENG</span>
                            </a>
                          </li>
                        </ul>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <a href="#"
                 class="btn btn-primary btn-icon btn-full"
                 data-element="personal-area-login"
              ><span class="rounded-icon" aria-hidden="true">
                  <svg class="icon icon-primary">
                        <use href="#it-user" />
                  </svg>
                </span>
                <span class="d-none d-lg-block">Accedi all'area personale</span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="it-nav-wrapper">
    <div class="it-header-center-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="it-header-center-content-wrapper">
              <div class="it-brand-wrapper">
                <a href="{{ url('<front>') }}" title="Vai alla homepage">
                  <img aria-hidden="true"
                       src="{{ site_settings.infocomune.info_comune.field_logo|getUrlFromMedia }}" alt="logo Comune"/>
                  <div class="it-brand-text">
                    <div class="it-brand-title">{{ site_settings.infocomune.info_comune.field_nome_comune }}</div>
                  </div>
                </a>
              </div>
              <div class="it-right-zone">
                <div class="it-socials d-none d-lg-flex">
                  <span>Seguici su</span>
                  <ul>
                      {% for social in site_settings.infocomune.info_comune.field_icone_social %}
                          {{ drupal_entity('paragraph',social.target_id,'social_header') }}
                      {% endfor %}
                  </ul>
                </div>
                <div class="it-search-wrapper" data-bs-toggle="modal" data-bs-target="#search-modal"
                     aria-label="Cerca nel sito">
                  <span class="d-none d-md-block">Cerca</span>
                  <button class="search-link rounded-icon" type="button">
                    <svg class="icon">
                      <use href="#it-search" />
                    </svg>
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="it-header-navbar-wrapper" id="header-nav-wrapper">
      <div class="container">
        <div class="row">
          <div class="col-12">
            <div class="navbar navbar-expand-lg has-megamenu">
              <button class="custom-navbar-toggler" type="button"
                      data-bs-target="#nav4" data-bs-toggle="navbarcollapsible"
                      aria-controls="nav4" aria-expanded="false"
                      aria-label="Mostra/Nascondi la navigazione">
                <svg class="icon">
                  <use href="#it-burger" />
                </svg>
              </button>
              <div class="navbar-collapsable" id="nav4">
                <div class="overlay" style="display: none;"></div>
                <div class="close-div">
                  <button class="btn close-menu" type="button">
                    <span class="visually-hidden">Nascondi la navigazione</span>
                    <svg class="icon">
                      <use href="#it-close-big" />
                    </svg>
                  </button>
                </div>
                <div class="menu-wrapper">
                  <a href="{{ path('<front>') }}" class="logo-hamburger"
                     aria-label="home {{ site_settings.infocomune.info_comune.field_nome_comune }}"
                  >
                    <img style="width:82px;margin-right:16px;" aria-hidden="true"
                         src="{{ site_settings.infocomune.info_comune.field_logo|getUrlFromMedia }}" alt=""/>
                    <div class="it-brand-text">
                      <div class="it-brand-title">{{ site_settings.infocomune.info_comune.field_nome_comune }}</div>
                    </div>
                  </a>
                    {{ elements.topleft }}
                    {{ elements.topright }}
                  <div class="it-socials">
                    <span>Seguici su</span>
                    <ul>
                        {% for social in site_settings.infocomune.info_comune.field_icone_social %}
                            {{ drupal_entity('paragraph',social.target_id,'social_header_mobile') }}
                        {% endfor %}
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</header>