{% for item in attribute(rows[0], "#rows") %}
	{% set node = attribute(item, "#node") %}
	{% if node is defined and node is not null %}
		{# {{ node.field_immagine.entity.field_media_image.entity.uri.value }} #}
		{# {{ node.field_immagine.entity.field_media_image.entity.filename.value }} #}
		{# {{ node.field_immagine.entity.field_media_image.entity.filesize.value }} #}
		{# {{ node.field_immagine.entity.field_media_image.entity.created.value|date() }} #}
		{# {{ kint(node.field_immagine.entity.field_media_image.entity) }} #}
		{# {{ kint(node.field_immagine.entity.field_media_image) }} #}
		{# {{ node.field_immagine.entity.field_media_image.alt }} #}
		{# {{ node.field_immagine.entity.field_media_image.title }} #}
		{# {{ node.field_immagine.entity.field_media_image.width }} #}
		{# {{ node.field_immagine.entity.field_media_image.height }} #}
		<div class="col-12 col-lg-6 col-xl-4">
			<div class="card-wrapper shadow-sm rounded">
				<div class="card card-img no-after">
					<div class="img-responsive-wrapper cmp-list-card-img__wrapper">
						<div class="img-responsive img-responsive-panoramic h-100">
							<figure class="img-wrapper">
								<img class="rounded-top img-fluid"
									src="{{ file_url(node.field_immagine.entity.field_media_image.entity.uri.value) }}"
								>
							</figure>
						</div>
					</div>
					<div class="card-body">
						<div class="category-top cmp-list-card-img__body">
							<a class="text-decoration-none fw-bold cmp-list-card-img__body-heading-title"
								href={{ path(
									'entity.taxonomy_term.canonical',
									{ 'taxonomy_term': node.field_tipo_di_luogo.entity.tid.value }
								) }}
							>{{ node.field_tipo_di_luogo.entity.name.value }}</a>
						</div>
						<h3 class="cmp-list-card-img__body-title u-main-primary">{{ node.title.value }}</h3>
						<p class="cmp-list-card-img__body-description">{{ node.field_descrizione_breve.value }}</p>
						<a class="read-more t-primary text-uppercase cmp-list-card-img__body-link"
							href="{{ path('entity.node.canonical', { 'node': node.nid.value }) }}"
						>
							<span class="text">Leggi di pi√π</span>
							<span class="visually-hidden">"Vai alla pagina di {{ node.title.value }}"</span>
							<svg class="icon icon-primary icon-xs ml-10">
								<use href="#it-arrow-right" />
							</svg>
						</a>
					</div>
				</div>
			</div>
		</div>
	{% endif %}
{% endfor %}
