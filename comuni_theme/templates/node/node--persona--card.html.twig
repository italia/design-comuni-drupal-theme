<div class="col">
  <div class="card card-teaser white-bg shadow-sm rounded border border-light h-100 d-block">
    <div class="container p-0">
      <div class="row m-0">
        <div class="col p-0">
          <div class="card-body">
            <h3 class="card-title text-paragraph-medium u-grey-light">{{ content.field_nome[0] }} {{ content.field_cognome[0] }}</h3>
            <div class="text-paragraph-card u-grey-light m-0">
              <div class="mb-3">{{ content.field_descrizione_breve }}</div>
              <div class="mb-1">{{ drupal_view('incarichi_collegati', 'block_3', node.id) }}</div>
            </div>
          </div>
        </div>
        <div class="col-5 p-0 ps-4">
          <div>
            {{ drupal_image(content.field_immagine[0]["#item"].target_id, '4_3', {loading: 'lazy', class: 'w-100 h-auto d-none d-sm-block', alt: content.field_immagine[0]["#item"].alt|t, title: content.field_immagine[0]["#item"].alt|t}) }}
          </div>
        </div>
      </div>
    </div>
    <a class="read-more bottom-0 position-relative d-block mt-3" href="{{ url }}" title="Vai al contenuto {{ node.label }}"> <span class="text">Ulteriori dettagli</span>
      <svg  class="icon ms-0">
        <use href="#it-arrow-right" />
      </svg>
    </a>
  </div>
</div>