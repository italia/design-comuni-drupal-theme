          <div class="richtext-wrapper lora">
            {{ content.field_procedure_collegate_esito }}
          </div>
        </section>
        {% endif %}
        <section class="it-page-section mb-30 has-bg-grey shadow-sm rounded border border-light p-4">
          <h2 class="mb-3" id="submit-request">Accedi al servizio</h2>
          {% if content.field_canale_digitale[0] %}
          <p class="text-paragraph lora mb-4" data-element="service-generic-access">
            Puoi accedere a {{ node.label }} direttamente online.
          </p>
          <a href="{{ content.field_canale_digitale['#items'][0].uri }}" target="_blank"
            type="button" class="btn btn-primary mobile-full" data-element="service-online-access"
          >
            <span class="">{{ content.field_canale_digitale['#items'][0].title }}</span>
          </a>
          <p class="text-paragraph lora mt-4" data-element="service-generic-access">
            Oppure, puoi prenotare un appuntamento e presentarti presso gli uffici.
          </p>
          {% else %}
          <p class="text-paragraph lora mt-4" data-element="service-generic-access">
            Puoi prenotare un appuntamento e presentarti presso gli uffici.
          </p>
          {% endif %}
          <a href='/prenotazione-appuntamento' target="_blank"
            class="btn btn-outline-primary t-primary bg-white mobile-full"
            data-element="service-booking-access"
          ><span>Prenota appuntamento</span>
          </a>
        </section>
        {% if content.field_vincoli[0] is not empty %}
        <section class="it-page-section  mb-30">
          <h2 class="title-xxlarge mb-3" id="constraints">Vincoli</h2>
          <div class="richtext-wrapper lora">
            {{ content.field_vincoli }}
          </div>
        </section>
        {% endif %}
        {% if content.field_casi_particolari[0] is not empty %}
        <section class="it-page-section  mb-30">
          <h2 class="title-xxlarge mb-3" id="special-cases">Casi particolari</h2>
          <div class="richtext-wrapper lora">
            {{ content.field_casi_particolari }}
          </div>
        </section>
        {% endif %}
        {% if content.field_ulteriori_informazioni[0] is not empty %}
        <section class="it-page-section  mb-30">
          <h2 class="title-xxlarge mb-3" id="more-info">Ulteriori informazioni</h2>
          <div class="richtext-wrapper lora">
            {{ content.field_ulteriori_informazioni }}
          </div>
        </section>
        {% endif %}
        {% if content.field_condizioni_di_servizio_par[0] is not empty %}
        <section class="it-page-section  mb-30">
          <h2 class="title-xxlarge mb-3" id="conditions">Condizioni di servizio</h2>
          <p class="text-paragraph lora mb-1">Per conoscere i dettagli di scadenze, requisiti e altre informazioni importanti, leggi i termini e le condizioni di servizio.</p>
          {{ content.field_condizioni_di_servizio_par }}
        </section>
        {% endif %}

        {% if content.field_contatti[0] is not empty or content.field_unita_org_responsabile[0] is not empty %}
        <section class="it-page-section mb-30">
            <div class="container my-3">
              <div class="row row-cols-lg-2 row-cols-1 g-4">
              
                {% if content.field_contatti[0] is not empty %}
                  <div class="col">
                    <h2 class="mb-3" id="contacts">Contatti</h2>
                    <div class="row row-cols-1 g-4">
                      {{ content.field_contatti }}
                    </div>
                  </div>
                {% else %}
                  {% if drupal_view_result('punti_di_contatto_collegati', 'block_1', node.field_unita_org_responsabile[0].target_id) %}
                    <div class="col">
                      <h2 class="mb-3" id="contacts">Contatti</h2>
                      <div class="row row-cols-1 g-4">
                          {{ drupal_view('punti_di_contatto_collegati', 'block_1', node.field_unita_org_responsabile[0].target_id) }}
                        </div>
                      </div>
                    </div>
                  {% else %}
                    <div class="col">
                      <h2 class="mb-3" id="contacts">Contatti</h2>
                      <div class="row row-cols-1 g-4">
                        {{ drupal_view('punti_di_contatto_collegati', 'block_2', node.field_unita_org_responsabile[0].target_id) }}
                      </div>
                    </div>
                  {% endif %}
                {% endif %}

                {% if content.field_unita_org_responsabile[0] is not empty %}
                  <div class="col">
                    <h2 class="mb-3" id="contacts">Ufficio responsabile</h2>
                    <div class="row row-cols-1 g-4">
                      {{ content.field_unita_org_responsabile }}
                    </div>
                  </div>
                {% endif %}
              </div>
            </div>
        </section>
        {% endif %}


        {% if content.field_documenti[0] is not empty %}
        <section class="it-page-section  mb-30">
          <h2 class="title-xxlarge mb-3" id="documents">Documenti</h2>
          <div class="container my-3">
            <div class="row row-cols-lg-2 row-cols-1 g-4">
              {{ content.field_documenti }}
            </div>
          </div>
        </section>
        {% endif %}

        <section class="it-page-section">
          {% if content.field_argomenti[0] is not empty or node.changed.value %}
            <div class="mb-30">
              {% if content.field_argomenti[0] is not empty %}
              <span class="text-paragraph-small">Argomenti:</span>
              <ul class="d-flex flex-wrap gap-2 mt-10 mb-3">
              {% for argomento in content.field_argomenti['#items'] %}
                {% set argName = argomento.entity.name.value %}
                <li>
                  <a href="{{ path('entity.taxonomy_term.canonical', {'taxonomy_term': argomento.target_id}) }}" 
                    class="chip chip-simple" data-element="service-topic"
                  >
                    <span class="chip-label">
                      {{ argName }}
                    </span>
                  </a>
                </li>
              {% endfor %}
              {% endif %}
              </ul>
              {% if node.changed.value %}
              <p class="text-paragraph-small mb-0">Pagina aggiornata il {{ node.changed.value|date("d/m/Y") }}</p>
              {% endif %}
            </div>
          {% endif %}
        </section>
      </div>
    </div>
  </div>
</div>
